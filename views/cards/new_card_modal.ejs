<div id="<%= modalId %>" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form action="/card" method="POST">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Új kártya</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <label for="name">Név</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Név">
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-xs-4">
                            <label for="mana">Mana</label>
                            <input type="text" class="form-control" id="mana" name="mana" placeholder="Mana">
                        </div>
                        <div class="form-group col-xs-4">
                            <label for="attack">Támadás</label>
                            <input type="text" class="form-control" id="attack" name="attack" placeholder="Támadás">
                        </div>
                        <div class="form-group col-xs-4">
                            <label for="defense">Védekezés</label>
                            <input type="text" class="form-control" id="defense" name="defense" placeholder="Védekezés">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Mentés</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>